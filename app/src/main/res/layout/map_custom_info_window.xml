<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
    android:orientation="horizontal"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#99A2D6"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_vehicle_photo"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_111sdp"
            app:srcCompat="@drawable/ic_car"
            />

        <TextView
            android:id="@+id/tv_vehicle_name"
            style="@style/card_view_value"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Not loaded"/>

        <TextView
            android:id="@+id/tv_vehicle_address"
            style="@style/card_view_value"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Not loaded"/>

        <TextView
            android:id="@+id/tv_vehicle_color"
            style="@style/card_view_value"
            android:layout_marginLeft="@dimen/_8sdp"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_gravity="left"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Not loaded"/>


    </LinearLayout>


</LinearLayout>